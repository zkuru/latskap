<idea-plugin>
    <id>com.latskap</id>
    <name>Latskap</name>
    <vendor email="r.abuzyarova@gmail.com">Raisa Abuzyarova</vendor>

    <description>This plugin allows to run tests N times without going to 'Edit Configuration'</description>

    <depends>com.intellij.modules.java</depends>
    <depends>JUnit</depends>

    <actions>
        <action id="RunTestsNTimes" class="RunTestsNTimes" text="Run Tests Multiple Times"
                description="Runs test multiple times" icon="/icons/science.png">
            <add-to-group group-id="Runner.Layout" anchor="last"/>
        </action>
    </actions>
</idea-plugin>